<div class="container-fluid">

    <div class="d-flex mt-5 justify-content-center">
        <div class="card" style="width: 19rem;">
            <img src="images/nodets.jpg" class="card-img-top" alt="Nodejs+typescrypt">
            <div class="card-body">
                <form id="customItemForm" method="post">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="formUsername"><i
                                class="fa-regular fa-solid fa-user"></i></span>
                        <input name="username" type="text" class="form-control" placeholder="Username" aria-label="Username"
                            aria-describedby="formUsername">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="formPassword"><i
                                class="fa-regular fa-solid fa-lock"></i></span>
                        <input name="password" type="text" class="form-control" placeholder="Password" aria-label="formPassword"
                            aria-describedby="formPassword">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="formConfirmPassword"><i
                                class="fa-regular fa-solid fa-lock"></i></span>
                        <input name="confirmPassword" type="text" class="form-control" placeholder="Confirm password"
                            aria-label="formConfirmPassword" aria-describedby="formConfirmPassword">
                    </div>
                    <div class="form-group d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="button" class="btn btn-outline-primary" id="register">Register</button>
                        <button type="button" class="btn btn-outline-warning">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>